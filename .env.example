# Claude2Api+ Environment Variables Configuration
# Copy this file to .env and set your values

# Session Configuration
SESSIONS=sk-ant-sid01-your-session-key:your-org-id,sk-ant-sid01-another-session-key:another-org-id

# Session Manager Configuration
SESSION_MANAGER_ENABLED=true
SESSION_MANAGER_STRATEGY=round_robin  # Options: round_robin, health_priority, weighted
HEALTH_CHECK_INTERVAL=30s
MIN_HEALTH_SCORE=0.5
CIRCUIT_BREAKER_ENABLED=true
MAX_RETRY_ATTEMPTS=3

# Service Configuration
ADDRESS=0.0.0.0:8080
APIKEY=your-api-key-here
PROXY=http://127.0.0.1:2080

# Chat Configuration
CHAT_DELETE=true
MAX_CHAT_HISTORY_LENGTH=10000
NO_ROLE_PREFIX=false
PROMPT_DISABLE_ARTIFACTS=false

# Mirror API Configuration
ENABLE_MIRROR_API=false
MIRROR_API_PREFIX=/mirror
